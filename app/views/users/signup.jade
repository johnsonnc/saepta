extends auth

block auth
  form.form-horizontal(action="/users", method="post")
    input(type='hidden', name='_csrf', value="#{csrf_token}")
    .form-group
      label.col-lg-2.control-label(for='name') Full name
      .col-lg-10
        input#name.form-control(type='text', name="name", placeholder='Full name', value=user.name)

    .form-group
      label.col-lg-2.control-label(for='email') Email
      .col-lg-10
        input#email.form-control(type='text', name="email", placeholder='Email', value=user.email)

    .form-group
      label.col-lg-2.control-label(for='username') Username
      .col-lg-10
        input#username.form-control(type='text', name="username", placeholder='Username', value=user.username)

    .form-group
      label.col-lg-2.control-label(for='password') Password
      .col-lg-10
        input#password.form-control(type='password', name="password", placeholder='Password')

    .form-actions
      button.btn.btn-primary(type='submit') Sign up
      &nbsp;
      | or&nbsp;
      a.show-login(href="/login") login
