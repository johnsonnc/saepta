extends ../layouts/default


block main
  h1= title
  hr

block content
  - var action = '/companies'
  - action += company.isNew? '' : '/' + company.id

  .row
    .span7
      form.form-horizontal(method="post", action=action, enctype="multipart/form-data")

        input(type="hidden", name="_csrf", value="#{csrf_token}")

        - if (!company.isNew)
          input(type="hidden", name="_method", value="PUT")

        .control-group
          label.control-label(for='title') Title
          .controls
            input#title.input-xlarge(type='text', name="title", value=company.title, placeholder='Enter the title')

        .control-group
          label.control-label(for='file') Image
          .controls
            input#file(type='file', name="image[]")

        .control-group
          label.control-label(for='desc') Body
          .controls
            textarea#desc.input-xlarge(type='text', rows="5", name="body", placeholder='Enter the company description')=company.body

        .control-group
          label.control-label(for='tags') Tags
          .controls
            input#tags(type='text', name="tags", value=company.tags, placeholder='Enter the tags')

        .form-actions
          button.btn.btn-primary(type='submit') Save changes
          &nbsp;
          a.btn(href='/companies', title="cancel") Cancel

    .span5
      - if (!company.isNew && company.image && company.image.files && company.image.files.length)
        img(src=company.image.cdnUri + "/mini_" + company.image.files[0])
